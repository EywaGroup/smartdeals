<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
     <script src="smart_deals_app.js"></script>
 <div class="main_content">
  <div class="row" id="pizza_top">
    <div class="col-md-4">
<%array = Array.new()%>
<div class="alert alert-success">Pizza was successfully commissioned!</div>
   

   
      <%= image_tag @pizza.image.url(:medium), class: "pizza_image" %>
    </div>
    <div class="col-md-8">
      <div id="pizza_info">
        <h1>
          <%= @pizza.title %>
        </h1>
        <p class="description">
          <%= @pizza.description %>
        </p>
        <%= link_to "Info", info_index_path, class: "btn btn-default" %>
<%= render 'info' %>

<%= render 'info2' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Ingredients</h2>
        <ul>
          <% @pizza.ingredients.each do |ingredient| %>
            <li>
            name:
              <%= ingredient.name %>
              price:
              <%= ingredient.price %>
              vendor number:
              <%= ingredient.vendor_number %>
            </li>
            <% tranzaction = create_tranzaction(ingredient.name,ingredient.vendor_number,ingredient.price)%>
            <%array.push(tranzaction)%>            
          <% end %>
        </ul>
      </div>
    </div>
  </div>
    <div>
      {{test}}
    </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
        <%= link_to "Edit", edit_pizza_path, class: "btn btn-default" %>
        <%= link_to "Delete", pizza_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default" %>
    </div>
  </div>
</div>
